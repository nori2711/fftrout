<link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-1.12.4.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js" type="text/javascript"></script>

<p><%= link_to ">釣果の登録", "/hunts/new", method: :get %><c style="font-size: 11px">(現在地情報を利用)</c></p>
<p><%= link_to ">釣果マップを表示", "/hunts/", method: :get %></p>
<div class="hunt_content">
  <ul>
    <% @hunts.each do |hunt| %>
      <li>
        <%= time_ago_in_words hunt.created_at %>前：<%= hunt.user.nickname %></br>
        <a class="photo" href= <%= hunt.fish_photo.url %> data-lightbox="abc" data-title="fish_photo">
          <%= image_tag hunt.fish_photo.url, alt: '',size: '60' %>
        </a>
        <a class="photo" href= <%= hunt.fly_photo.url %> data-lightbox="abc" data-title="fly_photo">
          <%= image_tag hunt.fly_photo.url, alt: '',size: '60' %>
        </a>
        <a class="photo" href= <%= hunt.spot_photo.url %> data-lightbox="abc" data-title="spot_photo">
          <%= image_tag hunt.spot_photo.url, alt: '',size: '60' %>
        </a>
        <%= link_to "詳細", "/hunts/#{hunt.id}", method: :get %>
      </li>
    <% end %>
  </ul>
</div>
